.page-header
  = link_to 'New Foo', new_admins_foo_path, :class => 'btn pull-right'
  %h2= 'Foos'

= paginate @foos, :theme => 'comfy'

%table.table.table-hover.table-bordered
  %tr
    %th.main Bar
    %th
  - @foos.each do |foo|
    %tr
      %td.main= foo.bar
      %td
        .btn-group
          = link_to 'Edit', edit_admins_foo_path(foo), :class => 'btn btn-small'
          = link_to 'Delete', admins_foo_path(foo), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-small btn-danger'

= paginate @foos, :theme => 'comfy'