= render '/admins/cms/partials/navigation_before'

%ul.navigation
  %li= active_link_to t('admin.cms.base.sites'), admins_cms_sites_path, :active => ['admins/cms/sites']
  
  - if @site && !@site.new_record?
    %li= active_link_to t('admin.cms.base.layouts'), admins_cms_site_layouts_path(@site)
    %li= active_link_to t('admin.cms.base.pages'), admins_cms_site_pages_path(@site)
    %li= active_link_to t('admin.cms.base.snippets'), admins_cms_site_snippets_path(@site)
    %li= active_link_to t('admin.cms.base.files'), admins_cms_site_files_path(@site)
    
  = cms_hook :navigation
    
  = render '/admins/cms/partials/navigation_inner'
    
= render '/admins/cms/partials/navigation_after'
